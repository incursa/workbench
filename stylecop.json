{
  "$schema": "https://raw.githubusercontent.com/DotNetAnalyzers/StyleCopAnalyzers/master/StyleCop.Analyzers/StyleCop.Analyzers/Settings/stylecop.schema.json",
  "settings": {
    "documentationRules": {
      "companyName": "Incursa",
      "copyrightText": "CONFIDENTIAL - Copyright (c) {companyName}. All rights reserved.\nSee NOTICE.md for full restrictions and usage terms.",
      "variables": {
      },
      "xmlHeader": false,
      "documentInterfaces": false,
      "documentExposedElements": false,
      "documentInternalElements": false,
      "documentPrivateElements": false,
      "documentPrivateFields": false,
      "documentationCulture": "en-US",
      "fileNamingConvention": "metadata"
    },
    "indentation": {
      "indentationSize": 4,
      "tabSize": 4,
      "useTabs": false
    },
    "spacingRules": {},
    "readabilityRules": {
      "allowBuiltInTypeAliases": true,
      "requireReadonlyFields": true,
      "requireImmutableCollections": true
    },
    "orderingRules": {
      "elementOrder": [
        "kind",
        "constant",
        "accessibility",
        "static",
        "readonly"
      ],
      "systemUsingDirectivesFirst": true,
      "usingDirectivesPlacement": "insideNamespace",
      "blankLinesBetweenUsingGroups": "omit"
    },
    "namingRules": {
      "allowCommonHungarianPrefixes": true,
      "allowedHungarianPrefixes": ["id", "ui", "db"]
    },
    "maintainabilityRules": {
      "topLevelTypes": [
        "class",
        "interface",
        "enum",
        "struct"
      ],
      "stringComparisonRules": {
        "requireExplicitStringComparisons": true,
        "allowedStringComparisonMethods": [
          "StringComparison.Ordinal",
          "StringComparison.OrdinalIgnoreCase"
        ]
      }
    },
    "layoutRules": {
      "newlineAtEndOfFile": "require",
      "allowConsecutiveUsings": true
    }
  }
}
