{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Workbench Doc Front Matter",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "workbench": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["spec", "adr", "doc", "runbook", "guide"] },
        "workItems": { "type": "array", "items": { "type": "string" } },
        "codeRefs": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
