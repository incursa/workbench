{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Workbench Doc Front Matter",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "workbench": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["spec", "adr", "doc", "runbook", "guide"] },
        "workItems": { "type": "array", "items": { "type": "string" } },
        "codeRefs": { "type": "array", "items": { "type": "string" } },
        "path": { "type": "string" },
        "pathHistory": { "type": "array", "items": { "type": "string" } },
        "changeNotes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "title": { "type": "string" },
    "type": { "type": "string" },
    "created_utc": { "type": "string" },
    "updated_utc": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "related": {
      "oneOf": [
        { "type": "array", "items": { "type": "string" } },
        { "type": "object", "additionalProperties": true }
      ]
    },
    "status": { "type": "string" },
    "source": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "kind": { "type": "string" },
        "transcript": { "type": "string" },
        "audio": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "sample_rate_hz": { "type": "number" },
            "channels": { "type": "number" },
            "format": { "type": "string" }
          }
        }
      }
    }
  }
}
